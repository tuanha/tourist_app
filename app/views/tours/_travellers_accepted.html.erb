<table class="table table-bordered">
  <thead>
    <tr>
      <th>Index</th>
      <th>Avatar</th>
      <th>Email</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Device</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% if travellers_accepted.present? %>
      <% travellers_accepted.each_with_index do |traveller, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td class="text-center col-md-1"><%=  link_to(traveller) do %>
              <%= image_tag traveller.avatar.url(:thumb), class: 'avatar' %>
            <% end %></td>
          <td><%= traveller.email %></td>
          <td><%= link_to traveller.name, traveller %></td>
          <td><%= traveller.address %></td>
          <td><%= traveller.phone %></td>
          <td><%= device_info(traveller, tour) %></td>
          <td class="col-md-1"><button type="button" class="btn btn-danger action-traveller" data-tour-id="<%= tour.id %>" data-traveller-id="<%= traveller.id %>" data-status="<%= TravellerTour::STATUS[:cancel] %>">Cancel</button></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="8"><center>Data is empty!</center></td>
      </tr>
    <% end %>
  </tbody>
</table>
