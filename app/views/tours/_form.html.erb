<%= form_for(@tour, :html => {class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label"><%= f.label :name %></label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="information" class="col-sm-2 control-label"><%= f.label :information %></label>
    <div class="col-sm-10">
      <%= f.text_area :information, rows: 6, col: 30, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary"%>
    </div>
  </div>
<% end %>
