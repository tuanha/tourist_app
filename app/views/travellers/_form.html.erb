<%= form_for(@traveller, :html => {class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <label for="email" class="col-sm-2 control-label"><%= f.label :email %></label>
    <div class="col-sm-10">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="col-sm-2 control-label"><%= f.label :password %></label>
    <div class="col-sm-10">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="password_confirmation" class="col-sm-2 control-label"><%= f.label :password_confirmation %></label>
    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label"><%= f.label :name %></label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="address" class="col-sm-2 control-label"><%= f.label :address %></label>
    <div class="col-sm-10">
      <%= f.text_field :address, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="phone" class="col-sm-2 control-label"><%= f.label :phone %></label>
    <div class="col-sm-10">
      <%= f.text_field :phone, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="avatar" class="col-sm-2 control-label"><%= f.label :avatar %></label>
    <div class="col-sm-10">
      <%= f.file_field :avatar, :accept => "image/*", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="gender" class="col-sm-2 control-label"><%= f.label :gender %></label>
    <div class="col-sm-10">
      <% Traveller::GENDER.each do |gender| %>
        <label><%= gender %></label>
        <%= radio_button("traveller", "gender", gender) %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary"%>
    </div>
  </div>
<% end %>
